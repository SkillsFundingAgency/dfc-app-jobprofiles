@if (Model != null)
{
    if (Model.HasSubject || Model.HasFurtherInformation || Model.HasEntryRequirementPreface || Model.HasEntryRequirements || Model.HasAdditionalInformation)
    {
        <section class="job-profile-subsection" id="@Model.RouteName.ToString()">
            <h3>@Model.RouteName.ToString()</h3>
            <div class="job-profile-subsection-content">

                @Html.Raw(Model?.Subject)

                @Html.Raw(Model?.FurtherInformation)

                @if (Model.HasEntryRequirements || Model.HasEntryRequirementPreface)
                {
                    <h4>Entry requirements</h4>
                    <p>@Model.EntryRequirementPreface</p>

                    <ul class="list-reqs">
                        @foreach (var requirement in Model.EntryRequirements)
                        {
                            <li>@Html.Raw(requirement.Description)</li>
                        }
                    </ul>
                }

                @if (Model.HasAdditionalInformation)
                {
                    <h4>More Information</h4>
                    <ul class="list-link">
                        @foreach (var informationLink in Model.AdditionalInformation)
                        {
                            <li><a class="htb-feature" href="@informationLink.Link">@informationLink.Text</a></li>
                        }
                    </ul>
                }
            </div>
        </section>
    }
}