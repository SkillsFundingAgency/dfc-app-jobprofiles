@model BodyViewModel

<header class="job-profile-hero">
    <partial name="_OverviewBannerSegment" model=Model.Markup.OverviewBanner.Value/>
</header>

<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="job-profile-sections">
            <partial name="_SegmentLinks" />
            <partial name="_HowToBecomeSegment" model=Model.Markup.HowToBecome.Value />
            <partial name="_WhatItTakesSegment" model=Model.Markup.WhatItTakes.Value />
            <partial name="_WhatYouWillDoSegment" model=Model.Markup.WhatYouWillDo.Value />
            <partial name="_CareerPathSegment" model=Model.Markup.CareerPath.Value />
            <partial name="_CurrentOpportunitiesSegment" model=Model.Markup.CurrentOpportunities.Value />
            </div>
        </div>

        <div class="govuk-grid-column-one-third">
            <partial name="_Search" />
            <partial name="_RelatedCareersSegment" model=Model.Markup.RelatedCareers.Value />
        </div>
    </div>
</div>
