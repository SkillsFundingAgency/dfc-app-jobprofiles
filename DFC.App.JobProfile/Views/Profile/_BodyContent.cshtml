@model BodyViewModel

<header class="job-profile-hero">
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <partial name="_OverviewBannerSegment" model=@Model.Segments.SingleOrDefault(s => s.Segment == DFC.App.JobProfile.Data.JobProfileSegment.Overview).Markup />
            </div>
        </div>
    </div>
</header>

<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_SegmentLinks" />
            <partial name="_HowToBecomeSegment" model=@Model.Segments.SingleOrDefault(s => s.Segment == DFC.App.JobProfile.Data.JobProfileSegment.HowToBecome).Markup />
            <partial name="_WhatItTakesSegment" model=@Model.Segments.SingleOrDefault(s => s.Segment == DFC.App.JobProfile.Data.JobProfileSegment.WhatItTakes).Markup />
            <partial name="_WhatYouWillDoSegment" model=@Model.Segments.SingleOrDefault(s => s.Segment == DFC.App.JobProfile.Data.JobProfileSegment.WhatYouWillDo).Markup />
            <partial name="_CareerPathSegment" model=@Model.Segments.SingleOrDefault(s => s.Segment == DFC.App.JobProfile.Data.JobProfileSegment.CareerPathsAndProgression).Markup />
            <partial name="_CurrentOpportunitiesSegment" model=@Model.Segments.SingleOrDefault(s => s.Segment == DFC.App.JobProfile.Data.JobProfileSegment.CurrentOppurtunities).Markup />
        </div>

        <div class="govuk-grid-column-one-third">
            <partial name="_Search" />
            <partial name="_RelatedCareersSegment" model=@Model.Segments.SingleOrDefault(s => s.Segment == DFC.App.JobProfile.Data.JobProfileSegment.RelatedCareers).Markup />
        </div>
    </div>
</div>
