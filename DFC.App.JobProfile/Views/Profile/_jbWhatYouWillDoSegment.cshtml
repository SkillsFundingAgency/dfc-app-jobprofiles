@model DocumentViewModel
@{ 
    var dayToDayTasks = Model.ContentItems.Where(x => x.ContentType == "DayToDayTask").ToList();
    var workingEnvironment = Model.ContentItems.Where(x => x.ContentType == "WorkingEnvironment").ToList();
    var workingLocation = Model.ContentItems.Where(x => x.ContentType == "WorkingLocation").SingleOrDefault();
    var workingUniform = Model.ContentItems.Where(x => x.ContentType == "WorkingUniform").SingleOrDefault();

}

    <section id="WhatYouWillDo" data-gtm-vis-recent-on-screen-8675592_56="18870293" data-gtm-vis-first-on-screen-8675592_56="18870293" data-gtm-vis-total-visible-time-8675592_56="100" data-gtm-vis-has-fired-8675592_56="1">
        <h2 class="job-profile-heading">What you'll do</h2>

        @if (dayToDayTasks != null)
        {
            <section class="job-profile-subsection">
                <h3>Day-to-day tasks</h3>
                <div class="job-profile-subsection-content">
                    <p>
                        On a typical day you could:
                    </p>
                    <ul>
                        @foreach (var d2d in dayToDayTasks)
                        {
                            <li>@Html.Raw(d2d.Description)</li>
                        }
                    </ul>
                </div>
            </section>
        }

        @if (workingEnvironment != null)
        {
            <section class="job-profile-subsection" id="workingenvironment">
                <h3>Working environment</h3>
                <div class="job-profile-subsection-content">
                    <ul>
                        @foreach (var workingEnv in dayToDayTasks)
                        {
                            <li>@Html.Raw(workingEnv.Description)</li>
                        }
                    </ul>
                </div>
            </section>
        }

        @if (workingLocation != null)
        {
            <section class="job-profile-subsection" id="workingenvironment">
                <h3>Working Location</h3>
                <div class="job-profile-subsection-content">
                    @Html.Raw(workingLocation.Description)
                </div>
            </section>
        }

        @if (workingUniform != null)
        {
            <section class="job-profile-subsection" id="workingenvironment">
                <h3>Working Uniform</h3>
                <div class="job-profile-subsection-content">
                    @Html.Raw(workingUniform.Description)
                </div>
            </section>
        }
    </section>